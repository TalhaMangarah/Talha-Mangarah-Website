---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import HomeCard from "../components/HomeCard.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="flex h-screen min-h-full flex-row justify-center bg-primary px-4 py-4 text-white antialiased md:px-6 md:py-4"
  >
    <div class="flex w-full max-w-4xl flex-col">
      <Header title={SITE_TITLE} />
      <main class="flex flex-grow flex-col place-content-center">
        <HomeCard />
      </main>
      <Footer />
    </div>
  </body>
</html>
